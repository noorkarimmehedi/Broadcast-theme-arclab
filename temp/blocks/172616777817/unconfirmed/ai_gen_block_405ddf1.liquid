<div class="ai-size-chart-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.title != blank or block.settings.description != blank %}
    <div class="ai-size-chart-header-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h2 class="ai-size-chart-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
      {% endif %}
      {% if block.settings.description != blank %}
        <div class="ai-size-chart-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
      {% endif %}
    </div>
  {% endif %}

  {% assign has_content = false %}
  {% for i in (1..8) %}
    {% assign size_key = 'size_' | append: i %}
    {% assign chest_key = 'chest_' | append: i %}
    {% if block.settings[size_key] != blank or block.settings[chest_key] != blank %}
      {% assign has_content = true %}
      {% break %}
    {% endif %}
  {% endfor %}

  {% if has_content %}
    <!-- Desktop View -->
    <div class="ai-size-chart-desktop-view-{{ ai_gen_id }}">
      <div class="ai-size-chart-table-wrapper-{{ ai_gen_id }}">
        <table class="ai-size-chart-table-{{ ai_gen_id }}">
          <thead>
            <tr>
              <th>{{ block.settings.size_header | default: 'Size' }}</th>
              {% if block.settings.show_chest %}
                <th>{{ block.settings.chest_header | default: 'Chest' }}</th>
              {% endif %}
              {% if block.settings.show_waist %}
                <th>{{ block.settings.waist_header | default: 'Waist' }}</th>
              {% endif %}
              {% if block.settings.show_sleeves %}
                <th>{{ block.settings.sleeves_header | default: 'Sleeves' }}</th>
              {% endif %}
              {% if block.settings.show_collar %}
                <th>{{ block.settings.collar_header | default: 'Collar' }}</th>
              {% endif %}
              {% if block.settings.show_shoulder %}
                <th>{{ block.settings.shoulder_header | default: 'Shoulder' }}</th>
              {% endif %}
              {% if block.settings.show_length %}
                <th>{{ block.settings.length_header | default: 'Length' }}</th>
              {% endif %}
              {% if block.settings.show_hip %}
                <th>{{ block.settings.hip_header | default: 'Hip' }}</th>
              {% endif %}
            </tr>
          </thead>
          <tbody>
            {% for i in (1..8) %}
              {% assign size_key = 'size_' | append: i %}
              {% assign chest_key = 'chest_' | append: i %}
              {% assign waist_key = 'waist_' | append: i %}
              {% assign sleeves_key = 'sleeves_' | append: i %}
              {% assign collar_key = 'collar_' | append: i %}
              {% assign shoulder_key = 'shoulder_' | append: i %}
              {% assign length_key = 'length_' | append: i %}
              {% assign hip_key = 'hip_' | append: i %}
              
              {% assign size_value = block.settings[size_key] %}
              {% assign chest_value = block.settings[chest_key] %}
              {% assign waist_value = block.settings[waist_key] %}
              {% assign sleeves_value = block.settings[sleeves_key] %}
              {% assign collar_value = block.settings[collar_key] %}
              {% assign shoulder_value = block.settings[shoulder_key] %}
              {% assign length_value = block.settings[length_key] %}
              {% assign hip_value = block.settings[hip_key] %}
              
              {% if size_value != blank or chest_value != blank %}
                <tr>
                  <td>{{ size_value }}</td>
                  {% if block.settings.show_chest %}
                    <td>{{ chest_value }}</td>
                  {% endif %}
                  {% if block.settings.show_waist %}
                    <td>{{ waist_value }}</td>
                  {% endif %}
                  {% if block.settings.show_sleeves %}
                    <td>{{ sleeves_value }}</td>
                  {% endif %}
                  {% if block.settings.show_collar %}
                    <td>{{ collar_value }}</td>
                  {% endif %}
                  {% if block.settings.show_shoulder %}
                    <td>{{ shoulder_value }}</td>
                  {% endif %}
                  {% if block.settings.show_length %}
                    <td>{{ length_value }}</td>
                  {% endif %}
                  {% if block.settings.show_hip %}
                    <td>{{ hip_value }}</td>
                  {% endif %}
