{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-size-chart-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding }}px;
    border-radius: {{ block.settings.border_radius }}px;
    border: 1px solid {{ block.settings.border_color }};
    margin: 20px 0;
  }

  .ai-size-chart-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.title_font.family }}, {{ block.settings.title_font.fallback_families }};
    font-weight: {{ block.settings.title_font.weight }};
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_margin }}px 0;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-size-chart-description-{{ ai_gen_id }} {
    font-family: {{ block.settings.body_font.family }}, {{ block.settings.body_font.fallback_families }};
    font-weight: {{ block.settings.body_font.weight }};
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 {{ block.settings.description_margin }}px 0;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-size-chart-table-wrapper-{{ ai_gen_id }} {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    border-radius: {{ block.settings.table_border_radius }}px;
    border: 1px solid {{ block.settings.table_border_color }};
  }

  .ai-size-chart-table-{{ ai_gen_id }} {
    width: 100%;
    border-collapse: collapse;
    font-family: {{ block.settings.body_font.family }}, {{ block.settings.body_font.fallback_families }};
    font-weight: {{ block.settings.body_font.weight }};
    background-color: {{ block.settings.table_background_color }};
  }

  .ai-size-chart-table-{{ ai_gen_id }} th {
    background-color: {{ block.settings.header_background_color }};
    color: {{ block.settings.header_text_color }};
    font-size: {{ block.settings.header_font_size }}px;
    font-weight: 600;
    padding: {{ block.settings.cell_padding }}px;
    text-align: center;
    border-bottom: 2px solid {{ block.settings.table_border_color }};
    white-space: nowrap;
  }

  .ai-size-chart-table-{{ ai_gen_id }} td {
    padding: {{ block.settings.cell_padding }}px;
    text-align: center;
    border-bottom: 1px solid {{ block.settings.table_border_color }};
    font-size: {{ block.settings.cell_font_size }}px;
    color: {{ block.settings.text_color }};
    white-space: nowrap;
  }

  .ai-size-chart-table-{{ ai_gen_id }} tr:nth-child(even) {
    background-color: {{ block.settings.row_alternate_color }};
  }

  .ai-size-chart-table-{{ ai_gen_id }} tr:hover {
    background-color: {{ block.settings.row_hover_color }};
  }

  .ai-size-chart-table-{{ ai_gen_id }} td:first-child,
  .ai-size-chart-table-{{ ai_gen_id }} th:first-child {
    font-weight: 600;
    background-color: {{ block.settings.size_column_background }};
    color: {{ block.settings.size_column_text_color }};
  }

  .ai-size-chart-notes-{{ ai_gen_id }} {
    margin-top: {{ block.settings.notes_margin }}px;
    padding: {{ block.settings.notes_padding }}px;
    background-color: {{ block.settings.notes_background_color }};
    border-left: 4px solid {{ block.settings.accent_color }};
    border-radius: {{ block.settings.notes_border_radius }}px;
  }

  .ai-size-chart-notes-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.body_font.family }}, {{ block.settings.body_font.fallback_families }};
    font-weight: 600;
    font-size: {{ block.settings.notes_title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 8px 0;
  }

  .ai-size-chart-notes-content-{{ ai_gen_id }} {
    font-family: {{ block.settings.body_font.family }}, {{ block.settings.body_font.fallback_families }};
    font-weight: {{ block.settings.body_font.weight }};
    font-size: {{ block.settings.notes_font_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .ai-size-chart-{{ ai_gen_id }} {
      padding: {{ block.settings.padding | times: 0.7 }}px;
    }

    .ai-size-chart-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }

    .ai-size-chart-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }

    .ai-size-chart-table-{{ ai_gen_id }} th {
      font-size: {{ block.settings.header_font_size | times: 0.85 }}px;
      padding: {{ block.settings.cell_padding | times: 0.7 }}px;
    }

    .ai-size-chart-table-{{ ai_gen_id }} td {
      font-size: {{ block.settings.cell_font_size | times: 0.85 }}px;
      padding: {{ block.settings.cell_padding | times: 0.7 }}px;
    }

    .ai-size-chart-notes-{{ ai_gen_id }} {
      padding: {{ block.settings.notes_padding | times: 0.8 }}px;
    }

    .ai-size-chart-notes-title-{{ ai_gen_id }} {
