<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<style>
  /* WhatsApp Chat Widget Styles */
  .whatsapp-chat-widget {
    position: fixed;
    bottom: 15px;
    right: 20px;
    z-index: 9999;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
  }

  /* Floating Button (Now Transparent with WhatsApp Icon) */
  .whatsapp-float-button {
    width: 56px;
    height: 56px;
    background: transparent;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease;
  }

  .whatsapp-float-button:hover {
    transform: scale(1.1);
  }

  .whatsapp-icon-img {
    width: 56px;
    height: 56px;
  }

  .whatsapp-float-button.active .whatsapp-icon-img {
    display: none; /* Hide when close icon appears */
  }

  /* Close Icon (X) */
  .whatsapp-float-button .close-icon {
    width: 28px;
    height: 28px;
    stroke: #000;
    stroke-width: 1.5;
    transform: scale(0);
    opacity: 0;
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  .whatsapp-float-button.active .close-icon {
    transform: scale(1);
    opacity: 1;
  }

  /* Chat Container */
  .whatsapp-chat-container {
    position: absolute;
    bottom: 80px;
    right: 0;
    width: 320px;
    background: #fff;
    border-radius: 20px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    opacity: 0;
    transform: scale(0.8) translateY(20px);
    transform-origin: bottom right;
    transition: opacity 0.3s ease, transform 0.3s ease;
    pointer-events: none;
    border: 3px solid #FFD700;
    overflow: hidden;
  }

  .whatsapp-chat-container.active {
    opacity: 1;
    transform: scale(1) translateY(0);
    pointer-events: all;
  }

  /* Header */
  .whatsapp-chat-header {
    padding: 24px 20px 20px;
  }

  .whatsapp-chat-header h3 {
    margin: 0 0 8px;
    font-size: 18px;
    font-weight: 600;
  }

  .whatsapp-chat-header p {
    margin: 0;
    font-size: 14px;
    color: #6b7280;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .status-dot {
    width: 10px;
    height: 10px;
    background: #10b981;
    border-radius: 50%;
  }

  /* Footer Button */
  .whatsapp-start-button {
    width: 100%;
    background: #FFD700;
    border: none;
    padding: 16px 20px;
    border-radius: 12px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }

  /* Responsive Button Size */
  @media (max-width: 768px) {
    .whatsapp-float-button {
      width: 46px;
      height: 46px;
    }
    .whatsapp-icon-img {
      width: 46px;
      height: 46px;
    }
  }

  @media (max-width: 480px) {
    .whatsapp-float-button {
      width: 40px;
      height: 40px;
    }
    .whatsapp-icon-img {
      width: 40px;
      height: 40px;
    }
  }
</style>
</head>
<body>

<!-- WhatsApp Chat Widget -->
<div class="whatsapp-chat-widget" id="whatsapp-widget">
  <!-- Floating Button -->
  <button class="whatsapp-float-button" id="whatsapp-toggle" aria-label="Toggle WhatsApp Chat">
    <img src="https://upload.wikimedia.org/wikipedia/commons/6/6b/WhatsApp.svg" alt="WhatsApp" class="whatsapp-icon-img">
    <svg class="icon close-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none">
      <path d="M14.9994 15L9 9M9.00064 15L15 9" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </button>

  <!-- Chat Container -->
  <div class="whatsapp-chat-container" id="whatsapp-chat">
    <div class="whatsapp-chat-header">
      <h3>Hi there ðŸ‘‹ How can we help you?</h3>
      <p><span class="status-dot"></span> Typically replies in a few minutes</p>
    </div>
    <div class="whatsapp-chat-body"></div>
    <div class="whatsapp-chat-footer">
      <button class="whatsapp-start-button" id="whatsapp-start">Start Chat</button>
    </div>
  </div>
</div>

<script>
  const whatsappConfig = {
    phoneNumber: '+8801819502705',
    message: 'Hello there! Is someone available to chat?',
  };

  const toggleBtn = document.getElementById('whatsapp-toggle');
  const chatContainer = document.getElementById('whatsapp-chat');
  const startBtn = document.getElementById('whatsapp-start');

  toggleBtn.addEventListener('click', () => {
    toggleBtn.classList.toggle('active');
    chatContainer.classList.toggle('active');
  });

  startBtn.addEventListener('click', () => {
    const phone = whatsappConfig.phoneNumber.replace(/[^0-9]/g, '');
    const message = encodeURIComponent(whatsappConfig.message);
    window.open(`https://wa.me/${phone}?text=${message}`, '_blank');
  });
</script>

</body>
</html>
