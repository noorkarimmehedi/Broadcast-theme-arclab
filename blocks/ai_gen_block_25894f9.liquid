<script>
  (function() {
    class SizeChartDropdown{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.dropdown = this.querySelector('[data-size-selector]');
        this.emptyState = this.querySelector('[data-empty-state]');
        this.sizeCards = this.querySelectorAll('[data-size-card]');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.dropdown.addEventListener('change', (e) => {
          const selectedSize = e.target.value;
          this.showSizeCard(selectedSize);
        });
      }

      showSizeCard(sizeId) {
        this.sizeCards.forEach((card) => {
          card.classList.remove('active');
        });

        if (sizeId) {
          this.emptyState.style.display = 'none';
          const targetCard = this.querySelector(`[data-size-card="${sizeId}"]`);
          if (targetCard) {
            targetCard.classList.add('active');
          }
        } else {
          this.emptyState.style.display = 'block';
        }
      }
    }

    customElements.define('size-chart-dropdown-{{ ai_gen_id }}', SizeChartDropdown{{ ai_gen_id }});
  })();
</script>

